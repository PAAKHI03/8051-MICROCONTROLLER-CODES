//Generate square wave at both P0.2 and P3.2. Use Timer1,Mode2 and Timer0,Mode1 and simultaneously mode data from P1 to P2
ORG 0H
LJMP MAIN
ORG 200H
MAIN:  MOV P1,#0FFH
MOV P2,#00H
CLR P0.2
CLR P3.6
MOV TMOD,#21H
MOV TH1,#1FH
MOV TH0,#0EH
MOV TL0,#65H
SETB EA
SETB ET0
SETB ET1
SETB TR1
SETB TR0
STAY: MOV P2,P1
SJMP STAY
ORG 0BH
CPL P0.2
MOV TH0,#0E2H
MOV TL0,#65H
RETI
ORG 1BH
CPL P3.6
RETI
END
