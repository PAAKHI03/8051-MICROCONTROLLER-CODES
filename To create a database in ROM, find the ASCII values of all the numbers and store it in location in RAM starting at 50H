//To create a database in ROM, find the ASCII values of all the numbers and store it in location in RAM starting at 50H
ORG 100H
DB 10H,20H,30H,40H
ORG 0H
MOV DPTR, #100H
MOV R2,#00H
MOV R5,#04H
MOV R0,#50H
REP:CLR A
MOVC A,@A+DPTR
MOV R2,A
ANL A,#0FH
ACALL ASCII
MOV @R0,A
MOV A,R2
ANL A,#0F0H
SWAP A
ACALL ASCII
INC R0
MOV @R0,A
INC DPTR
DJNZ R5,REP
HERE:SJMP HERE
ASCII: MOV R3,A
CLR C
SUBB A,#0AH
MOV A,R3
JC SKIP
ADD A,#07H
SKIP:ADD A,#30H
RET
END
